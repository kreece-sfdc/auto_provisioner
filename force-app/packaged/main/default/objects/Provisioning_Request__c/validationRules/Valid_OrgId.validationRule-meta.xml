<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_OrgId</fullName>
    <active>true</active>
    <errorConditionFormula>Org_Id__c != null &amp;&amp; (!BEGINS( Org_Id__c,&apos;00D&apos;) ||  LEN( Org_Id__c ) &lt;&gt; 15)</errorConditionFormula>
    <errorDisplayField>Org_Id__c</errorDisplayField>
    <errorMessage>Please enter a valid Org Id [00Dxxxxxxxxxxxx] (15 characters)</errorMessage>
</ValidationRule>
